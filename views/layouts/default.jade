  body.no-skin
    // #section:basics/navbar.layout
    block navbar
      include ./partials/navbar
    #main-container.main-container
      script(type='text/javascript').
        try{ace.settings.check('main-container' , 'fixed')}catch(e){}
      // #section:basics/sidebar
      //- to make it easily overwriteable
      block sidebar
        include ./partials/sidebar
      .main-content
        .main-content-inner
          .page-content
            // #section:settings.box
            block settings
              include ./partials/settings-box
            .page-header
              h1= pageTitle ? pageTitle : 'Page Title' 
            // /.page-header
            .row
              .col-xs-12
                // PAGE CONTENT BEGINS
                .hidden
                  //- to make it easily overwriteable
                  block topbar
                    include ./partials/topbar
                .hidden-sm.hidden-xs
                  //- button.sidebar-collapse.btn.btn-white.btn-primary(type='button', data-target='#sidebar2')
                  //-   i.ace-icon.fa.fa-angle-double-up(data-icon1='ace-icon fa fa-angle-double-up', data-icon2='ace-icon fa fa-angle-double-down')
                  //-   |Collapse/Expand Menu
                  block content
                .hidden-md.hidden-lg
                  .well.well-sm
                    | You can place multiple toggle buttons for multiple menus anywhere inside navbar!
                // PAGE CONTENT ENDS
              // /.col
            // /.row
          // /.page-content
      // /.main-content
      .footer
        .footer-inner
          // #section:basics/footer
          block footer
            include ./partials/footer
      a#btn-scroll-up.btn-scroll-up.btn.btn-sm.btn-inverse(href='#')
        i.ace-icon.fa.fa-angle-double-up.icon-only.bigger-110
    // /.main-container
    // basic scripts
    block scripts
      include ./partials/scripts
